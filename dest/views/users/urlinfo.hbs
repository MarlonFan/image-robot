{{#extend "css"}}
<link rel='stylesheet' href='/stylesheets/user/urlinfo/urlinfo.css' />
{{/extend}}

<div class="col-lg-12">
	<table class="table table-hover">
		
	</table>
	<div class="page-header">
  		<h1>URL操作页</h1>
	</div>
	<div class="panel panel-default">
		<div class="panel-body">
			<div class="page-header">
				<h2>页面信息</h2>
			</div>
			<ul class="list-group">
				<li class="list-group-item J-url-val" url="{{urlInfo.url}}">链接: {{urlInfo.url}}</li>
				<li class="list-group-item">标题: {{urlInfo.urlTitle}}</li>
				<li class="list-group-item">关键字: {{urlInfo.urlKeyword}}</li>
				<li class="list-group-item">介绍: {{urlInfo.urlDescription}}</li>
				<li class="list-group-item">父级别url: 
					{{#if urlInfo.parentUrl}}
						{{urlInfo.parentUrl}}
					{{else}}
						无
					{{/if}}
				</li>
			</ul>
		</div>
		
		<div class="panel-body">
			<div class="page-header">
				<h2>子链接</h2>
			</div>
			
			{{#if urlSon}}
				<div class="list-group">
					<a class="list-group-item disabled">请点击要爬去的链接</a>
					{{#each urlSon}}
						<a href="/users/urlinfo/?id={{this.id}}" class="list-group-item">{{this.url}}</a>
					{{/each}}
				</div>
			{{else}}
				<button class="btn btn-info J-get-url">抓取链接</button>
			{{/if}}
		</div>
		
		<div class="panel-body">
			<div class="page-header">
				<h2>图片</h2>
			</div>
			
			{{#if urlImg}}
				<ul class="list-group">
					{{#each urlImg}}
						<li class="list-group-item">{{this.imageName}}</li>
					{{/each}}
				</ul>
			{{else}}
				<button class="btn btn-info J-get-img">抓取图片</button>
				<!--滚动条-->
				<!--<div class="progress" style="margin-top: 10px;">
					<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
					</div>
				</div>-->
			{{/if}}
		</div>
		
	</div>
</div>

{{#extend "script"}}
<script src="/javascripts/user/urlinfo/urlinfo.js"></script>
{{/extend}}